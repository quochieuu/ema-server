@model List<Post>
@{
    ViewData["Title"] = "List Posts";
}

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper pb-0">
            <div class="row">
                <div class="col-lg-12 mb-3">
                    <a href="/post/create" class="btn btn-primary mb-2 mb-md-0 mr-2"> Create new post </a>
                </div>
                <div class="col-xl-12 stretch-card grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Content</th>
                                            <th>Comment No.</th>
                                            <th>Like No.</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Content</td>
                                                <td>@ViewBag.PostCommentNo</td>
                                                <td>@ViewBag.PostLikedNo</td>
                                                <td>
                                                    @if (item.IsActive)
                                                    {
                                                        <span><label class="badge badge-success">Active</label></span>
                                                    }
                                                    else
                                                    {
                                                        <span><label class="badge badge-danger">InActive</label></span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="#"><label class="badge badge-danger">Delete</label></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
